@using System.Web.Optimization
@using OhSoSecure.Core.Security
<!DOCTYPE html>

<html>
    <head>
        <title>@(ViewBag.Title)</title>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/bootstrap")
        @Styles.Render("~/Content/bootstrap")
        @Styles.Render("~/Content/css")
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="@Url.Action("Index", "Home")">Oh So Secure!</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="active">
                                <a href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            <li class="">
                                <a href="#">About</a>
                            </li>
                            <li class="">
                                <a href="#">Contact</a>
                            </li>
                        </ul>
                        <ul class="nav pull-right">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>
                                    Hello, @User.Identity.Name!
                                </li>
                                if (User.IsInRole(AuthRole.Admin)) {
                                <li>
                                    <a href="#">Admin All Teh Things!</a>
                                </li>
                                }

                                <li>
                                    <a href="@Url.Action("Profile", "Account")">Profile</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Profile", "Account")">Profile</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Logout", "Account")">Log Out</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("Register", "Account")">Register</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Login", "Account")">Log In</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>   
        @RenderBody()
    </body>
</html>